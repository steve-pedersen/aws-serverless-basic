{
  "name": "aws-serverless-basic",
  "version": "1.0.0",
  "description": "AWS Serverless Basic Starter App",
  "scripts": {
    "lint": "eslint .",
    "deploy": "npm run install-layer && serverless deploy",
    "build": "npm run install-layer && serverless package",
    "install-layer": "npm install --production --modules-folder dependency_layer/nodejs/node_modules",
    "test": "jest --coverage",
    "typescript": "typescript",
    "decrypt": "serverless decrypt",
    "encrypt": "serverless encrypt"
  },
  "jest": {
    "moduleNameMapper": {
      "^~(.*)$": "<rootDir>/src$1"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steve-pedersen/aws-serverless-basic"
  },
  "author": "",
  "license": "ISC",
